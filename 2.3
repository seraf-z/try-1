function chunkArrayInGroups(arr, n){
  
  if ( arr.length % n !== 0) {
    return alert('WRONG!!!');
    
  } else {
     var arrFin = [];
     var arrBuff = [];
     var limit = arr.length / n; 
     var start = 0;
     var stop = limit;

     for ( i = 0; i < n; i++ ) { 
         for (k = 0, j = start; k < limit - 1, j < stop; j++, k++) {
              arrBuff[k] = arr[j];
          }
            arrFin[i] = arrBuff;
            arrBuff = [];    
            start = stop;
            stop = stop + limit;  
     }
  }  return arrFin;
}
