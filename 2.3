 function chunkArrayInGroups(arr, size){
  let arrFin = [];       
  let start = 0;
  let stop = size;
  let n = Math.ceil ( arr.length / size );

  for (let i = 0; i < n-1; i++ ) {  // добавляем все, кроме последнего
    arrFin.push( arr.slice( start, stop ) );
    start = stop;
    stop = stop + size;    
  }
  
  arrFin.push( arr.slice( start ) ); // добавляем весь хвост
 
  return arrFin;
}
  
